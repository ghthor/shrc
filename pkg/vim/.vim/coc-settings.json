{
  "diagnostic.displayByAle": true,
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": [ "serve" ],
      "filetypes": [
        "terraform",
        "tf"
      ],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "go.goplsPath": "gopls",
  "go.goplsEnv": {
    "GOWORK": "off"
  },
  "go.goplsOptions": {
    "env": {
      "GOWORK": "off"
    }
  },

  "python.formatting.provider": "ruff",
  "python.linting.enabled": true,
  "python.linting.ruffEnabled": true,
  "[python]": {
    "coc.preferences.formatOnSave": true
  },
  "[typescriptreact]": {
    "coc.preferences.formatOnSave": true
  },
  "[typescript]": {
    "coc.preferences.formatOnSave": true
  }
}

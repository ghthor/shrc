#!/usr/bin/env bash

pathmunge() {
  if [ -d "$1" ]; then
    if ! echo "$PATH" | grep -Eq "(^|:)$1($|:)"; then
      if [ "$2" = "after" ]; then
        PATH="$PATH:$1"
      else
        PATH="$1:$PATH"
      fi
    fi
  fi
}

pathmunge "$HOME/go1.17/bin"
export PATH
export GOROOT="$HOME/go1.17"
export GOPATH="$HOME/go1.17"
export GOBIN="$HOME/go"
export GOMODCACHE="$HOME/go/pkg/mod"
